page{
  background-color: #ffffff;
}
.logo{
  margin-top:257rpx;
  text-align: center;
}
.logo image{
  width: 202rpx;
  height: 170rpx;
  margin: 0 auto;
}
.login{

  width:630rpx;
  margin:0 auto;
  margin-top: 180rpx;
}
.inputBar{
  position:relative;
}
.inputBar view{
  position: absolute;
  width:100rpx;
  left:40rpx;
  top:28rpx;
  color:#000000;
  font-size:35rpx;
  display: flex;
  height: 44rpx;
  line-height: 44rpx;
}
.inputBar text{
  margin-top: -42rpx;
  margin-left: 10rpx;
  color: #C9C9C9;
}

.inputBar input{
  width:628rpx;
  height:100rpx;
  border:4rpx solid #FDD1A2;
  border-radius:50rpx;
  padding-left:140rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
  font-size:32rpx;
  color:#000000;
  letter-spacing: 2rpx;
}
.submit{
  width:628rpx;
  height:90rpx;
  border-radius:50rpx;
  background:linear-gradient(to bottom right, #FFC289,#FFE981);
  color:#ffffff;
  font-size:38rpx;
  letter-spacing: 4rpx;
  margin-top: 50rpx;
  text-align: center;
  line-height: 90rpx;
}
.help image{
  width:58rpx;
  height:58rpx;

}
.help{
  color:#999999;
  font-size: 30rpx; 
  display: flex;
  line-height: 55rpx;
  margin-left:80%;
  margin-top:50rpx;
}
.help text{
  margin-top: 5rpx;
}
.helpWrap{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  z-index:5;
  background: rgba(0,0,0,0.35);
  
  font-size: 23rpx;
  color: #666666;
  font-family: 黑体;
}
.helpWords{
  width:490rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  margin:0 auto;
  margin-top:240rpx;
  position: relative;
  padding: 10rpx 54rpx 54rpx 54rpx;
}
.helpWords .close{
  width:36rpx;
  height:36rpx;
  position: absolute;
  right:60rpx;
  top:58rpx;
}
.title{
  font-size: 40rpx;
  color:#000000;
  font-weight: bold;
}
.question{
  color:#FF914B;
  word-spacing: 4rpx;
  font-weight: bold;
  font-size: 33rpx;
  display: block;
  margin-top:-20rpx;
}
.answer{
  display:block;
  margin-top:-30rpx;
  font-size: 30rpx;
  color:#959595;
  line-height: 150%;
}
.getUserInfo{
   width:180rpx;
  height:180rpx;
  margin:0 auto;
  border-radius:50%;
  background:linear-gradient(to bottom right, #FFC289,#FFE981);
  color:#ffffff;
  font-size:38rpx;
  letter-spacing: 4rpx;
  text-align: center;
  line-height: 180rpx;
  margin-top:300rpx;
}