.hotSearchnews{
	background-color: #FFFFFF;
	border-bottom: 10rpx solid #F2F2F2;
	width: 100%;
	height: 240rpx;
	color:#3E3E3E;
	display: flex;
	flex-direction: row;

}
.newsleft{
	width: 450rpx;
	display: flex;
	flex-direction: column;
}
.title{
	font-size: 34rpx;
	font-weight: bolder;
	margin-top: 20rpx;
	margin-left: 40rpx;
}
.abstract{
	width: 400rpx;
	height: 80rpx;
	font-size: 24rpx;
	color: #8D8C8C;
	margin-top: 10rpx;
	margin-left: 40rpx;

	line-height: 180%;
}
.userandlogo{
	display: flex;
	flex-direction: row;
	margin-left: 40rpx;
	margin-top: 17rpx;
}
.userhead{
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
}
.username{
	font-size: 24rpx;
	color: #B4B3B3;
	margin-left: 8rpx;
  overflow: hidden;
  width: 180rpx;
  display: inline-block;
}
.zanlogo{
	width: 24rpx;
	height: 24rpx;
	margin-left: 136rpx;
	margin-top: 12rpx;
}
.zannum{
	font-size: 24rpx;
	color: #B4B3B3;
	margin-left: 8rpx;
	margin-top: 7rpx;

}
.newsright{
	width: 300rpx;
}
.pic{
	width: 250rpx;
	height: 180rpx;
	float: right;
	margin-top: 30rpx;
	margin-right: 40rpx;
}
