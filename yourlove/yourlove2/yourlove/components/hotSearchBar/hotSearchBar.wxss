.hotSearchBar{
  width:100%;
  height: 98rpx;
  border-bottom:10rpx solid #F7F7F7;
  box-sizing: content-box;
  display: flex;
  /*padding:5rpx 20rpx 5rpx 30rpx;*/
  padding-left: 30rpx;
  font-size:32rpx;
  font-family: "微软雅黑";
  letter-spacing: 1rpx;
  color:#3E3E3E;
  line-height: 98rpx;
}
.content{
  height: 98rpx;
}
.numberTop{
  height: 98rpx;
  color:#FA9397;
  font-weight: bolder;
  font-size:38rpx;
  line-height: 98rpx;
  float: left;
}
.list{
  height: 98rpx;
  line-height: 98rpx;
  float: left;
  margin-left: 15rpx;
}
.number{
  height: 98rpx;
  color:#F3B41D;
  font-weight: bolder;
  font-size:38rpx;
  line-height: 98rpx;
  float: left;
}
