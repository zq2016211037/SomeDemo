.chatWrapper{
  position: fixed;
  bottom:0;
}
.chatWrapper .wrapper{
  width:100%;
  height:280rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
  padding:10rpx 10rpx 40rpx 10rpx;
  box-sizing: border-box;
  font-size:40rpx;
}
.chatWrapper .wrapper view{
  padding:10rpx;
  float: left;
}
.chatWrapper .bottom{
  width:100%;
  height:107rpx;
  background-color:#ffffff;
  padding:20rpx 20rpx 13rpx 20rpx;
  box-sizing: border-box;
  display: flex;
}
.chatWrapper .bottom image{
  width:70rpx;
  height:70rpx;
  margin-left:10rpx;
}
.chatWrapper .bottom textarea{
  width:540rpx;
  height:72rpx;
  border:3rpx solid #ffb064;
  border-radius:25rpx;
  margin-left:20rpx;
  padding-left:20rpx;
  padding-right: 10rpx;
  padding-top:15rpx;
  box-sizing: border-box;
  font-size:30rpx;
  line-height: 40rpx;
}
